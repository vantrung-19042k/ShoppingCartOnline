@using ShoppingCartOnline.Models;
@model IEnumerable<SanPham>

<h1>@Model.First().LoaiSanPham.TenLoai Mới </h1>
@foreach (var item in Model.Take(3))
{
    <div class="col-md-4 grid-top">
        <a href="@Url.Action("XemChiTiet", "SanPham", new {id=item.MaSP})" class="b-link-stripe b-animate-go  thickbox">
            <img class="img-responsive" src="@Url.Content("~/Content/images/SanPham/" + item.HinhAnh)" />
            <div class="b-wrapper">
                <h3 class="b-animate b-from-left    b-delay03 ">
                    <span>Mô tả ...</span>
                </h3>
            </div>
        </a>

        <p><a href="single.html">@item.TenSP</a></p>
    </div>
}
<div class="clearfix"> </div>
